{{!
    @template local/restrict

    This template renders summary information about a single quiz attempt.

    Example context (json):
    {

    }
}}



<table class="table table-borderd">
    <thead>
        <tr class="text-center">
            <th>
                <input  class="me-2" type="checkbox" name="select-ip" id="select-all"/>
                <span>{{#str}} selectall, local_restrict {{/str}}</span>
            </th>
            <th>
                {{#str}} ip, local_restrict {{/str}}
            </th>

            <th>
                {{#str}} lab, local_restrict {{/str}}
            </th>

            <th>
                {{#str}} status, local_restrict {{/str}}
            </th>
            <th>
                {{#str}} action, local_restrict {{/str}}
            </th>
        </tr>

    </thead>
    <tbody>

        {{#tableData}}
        <tr class="text-center" id="tr-{{{deviceId}}}">
            <td><input type="checkbox" name="select-ip" id="{{{deviceId}}}"/> </td>
            <td>{{deviceIp}} </td>
            <td>{{labName}} </td>
            <td><span class="text-{{status_class}}" id="span-{{{deviceId}}}">{{device_status}}</span></td>
            <td>
                <div class="d-flex justify-content-center">
                    <button class="btn btn-{{admin_btn}} mr-2" name="admin-btn" data-id="{{{deviceId}}}" data-action="{{{data_admin}}}" data-lab="{{{labid}}}">{{{admin_string}}}</button>
                    <button class="btn btn-{{btn_class}} mr-2" name="action-btn" data-id="{{{deviceId}}}" data-action="{{btn_data}}">{{btn_content}}</button>
                    <button class="btn btn-danger mr-2" name="action-btn" data-id="{{{deviceId}}}" data-action="del">Delete</button>

                </div>
            </td>

        </tr>
        {{/tableData}}
    </tbody>
</table>


