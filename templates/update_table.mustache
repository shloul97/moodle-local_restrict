{{!
    @template local/restrict

    This template renders summary information about a single quiz attempt.

    Example context (json):
    {

    }
}}



<table class="table table-borderd">
    <thead>
        <tr class="text-center">
            <th>
                <input  class="me-2" type="checkbox" name="select-ip" id="select-all"/>
                <span>Select All</span>
            </th>
            <th>
                IP
            </th>

            <th>
                Lab
            </th>

            <th>
                Status
            </th>
            <th>
                Action
            </th>
        </tr>

    </thead>
    <tbody>

        {{#tableData}}
        <tr class="text-center" id="tr-{{{deviceId}}}">
            <td><input type="checkbox" name="select-ip" id="{{{deviceId}}}"/> </td>
            <td>{{deviceIp}} </td>
            <td>{{labName}} </td>
            <td><span class="text-{{statusClass}}" id="span-{{{deviceId}}}">{{deviceStatus}}</span></td>
            <td>
                <div class="d-flex justify-content-center">
                    <button class="btn btn-{{adminBtn}} mr-2" name="admin-btn" data-id="{{{deviceId}}}" data-action="{{{dataAdmin}}}" data-lab="{{{labid}}}">{{{adminStr}}}</button>
                    <button class="btn btn-{{btnClass}} mr-2" name="action-btn" data-id="{{{deviceId}}}" data-action="{{btnData}}">{{btnContent}}</button>
                    <button class="btn btn-danger mr-2" name="action-btn" data-id="{{{deviceId}}}" data-action="del">Delete</button>

                </div>
            </td>

        </tr>
        {{/tableData}}
    </tbody>
</table>


