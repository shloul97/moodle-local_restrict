{{!
    @template local/restrict

    This template renders summary information about a single quiz attempt.

    Example context (json):
    {

        options = [
            'courseid' => 123,
            'idnumber' => 111111,
            'coursename' => 'Example Course'
        ]

        data = [
        'table' => [
            'tableData' => $options
        ]
    ];
    }
}}



<table class="table table-borderd">
    <thead>
        <tr class="text-center">
            <th>
                <input  class="me-2" type="checkbox" name="select-ip" id="select-all"/>
                <span>Select All</span>
            </th>
            <th>
                {{#str}} course_table_moodleid, local_restrict {{/str}}
            </th>

            <th>
                {{#str}} course_table_id, local_restrict {{/str}}
            </th>
            <th>
                {{#str}} course_table_name, local_restrict {{/str}}
            </th>
            <th>
                {{#str}} action, local_restrict {{/str}}
            </th>
        </tr>

    </thead>
    <tbody>

        {{#tableData}}
        <tr class="text-center" id="tr-{{{courseid}}}">
            <td><input type="checkbox" name="select-ip" id="{{{courseid}}}"/> </td>
            <td>{{courseid}} </td>
            <td>{{idnumber}} </td>
            <td>{{coursename}}</td>

            <td>
                <div class="d-flex justify-content-center">

                    <button class="btn btn-danger mr-2" name="action-btn" data-id="{{{courseid}}}" data-action="del">{{#str}} delete, local_restrict {{/str}}</button>

                </div>
            </td>

        </tr>
        {{/tableData}}
    </tbody>
</table>


